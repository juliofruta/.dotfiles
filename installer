
#!/usr/bin/env bash

# Quit program if any command fails
set -euo pipefail

echo "ðŸš€ Installing dotfiles!"
echo "-------------------------------------------------"
echo
export DOTFILES_PATH="$HOME/.dotfiles"
echo "ðŸ‘‰  Cloning into: '$DOTFILES_PATH'"

# To test that git is installed (if not macOS will prompt an installer)
git --version
git clone --depth 1 https://github.com/JuIioCesar/.dotfiles.git "$DOTFILES_PATH"

# The plugin is already in the zsh config.
ln -s -F $DOTFILES_PATH/zsh/.zshrc $HOME/.zshrc #Link zsh.

echo "ðŸ¦„ finished without any errors"

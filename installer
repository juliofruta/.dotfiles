
#!/usr/bin/env bash

# Quit program if any command fails
set -euo pipefail

echo "ðŸš€ Welcome to the dotfile finstaller!"
echo "-------------------------------------------------"
echo
export DOTFILES_PATH="$HOME/.dotfiles"
echo "ðŸ‘‰  Cloning into: '$DOTFILES_PATH'"

# To test that git is installed (if not macOS will prompt an installer)
git --version
git clone --depth 1 git@github.com:juiiocesar/.dotfiles.git "$DOTFILES_PATH"

# The plugin is already in the zsh config.
ln -s -F $DOTFILES_PATH/zsh/.zshrc $HOME/.zsh #Link zsh.

# set iterm profiles
mv $DOTFILES_PATH/Profiles.json $HOME/Library/Application\ Support/iTerm2/DynamicProfiles/Profiles.json

echo "ðŸ¦„ finished without any errors"
